@model IEnumerable<PlanilhaEletronicaWeb.Models.Classes.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar", "Create")
</p>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <p>
            Buscar por: @Html.TextBox("Pesquisa", null, new { htmlAttributes = new { @class = "form-control" } })
            <input type="submit" value="Pesquisar" class="btn btn-info" /> | @Html.ActionLink("Voltar", "Index")
        </p>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |

                <!--@Html.ActionLink("Deletar", "Delete", new { id = item.Id })|-->
                <input type="submit" name="X" value="X" class="btn btn-xs" />
            </td>
        </tr>
    }

</table>
