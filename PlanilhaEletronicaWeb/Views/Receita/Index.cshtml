@model IEnumerable<PlanilhaEletronicaWeb.Models.Classes.Receita>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoReceita.Nome)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataRecebimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FormaRecebimento)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Parcela.NumeroParcelas)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Situacao)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoReceita.Nome)
            </td>

            <td>
                @Html.Raw(string.Format("{0:C}", item.Valor))
                @*@Html.DisplayFor(modelItem => item.Valor)*@
            </td>
            <td>
                @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.DataRecebimento))
                @*@Html.DisplayFor(modelItem => item.DataRecebimento)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FormaRecebimento)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Parcela.NumeroParcelas)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Situacao)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

    <tfoot class="footer">
        <tr>
            <td><b>Total</b></td>
            <td>@Html.Raw(String.Format("<b>R$ {0:n2}</b>", @Model.Sum(i => i.Valor)))</td>
            <td><b></b></td>
            <td><b></b></td>
            <td></td>
            <td></td>
        </tr>
    </tfoot>
</table>

  

        

        

