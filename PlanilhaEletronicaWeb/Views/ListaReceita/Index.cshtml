@model PlanilhaEletronicaWeb.Models.Classes.Receita

@{
    ViewBag.Title = "Index";
}

<h3>Lista Receita</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.IdTipoReceita, "Tipo Receita", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdTipoReceita", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdTipoReceita, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" name="Filtrar" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</div>
}

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoReceita.Nome)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Situacao)
        </th>
    </tr>

    @foreach (PlanilhaEletronicaWeb.Models.Classes.Receita item in ViewBag.Lista)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoReceita)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Situacao)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdTipoReceita }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdTipoReceita }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdTipoReceita })
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>